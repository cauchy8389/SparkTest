<!-- Put site-specific property overrides in this file. -->

<configuration>
<!-- HDFS文本的副本量修改 -->
    <property>
            <name>dfs.replication</name>
            <value>1</value>
    </property>

    <!--secondary namenode  修改WEB UI查看的地址 -->
    <!-- 默认地址 namenode fs.defaultFS 下50070 -->
    <!-- 50070 WEB UI查看端口号  9000接口端口号 -->
    <property>
            <name>dfs.namenode.secondary.http-address</name>
            <value>zhy.cauchy8389.com:50090</value>
    </property>


    <property>
            <name>dfs.namenode.secondary.https-address</name>
            <value>zhy.cauchy8389.com:50091</value>
    </property>
    <property>
	    <name>dfs.permissions.enabled</name>
	    <value>false</value>
    </property>

</configuration>
